<h1>New Company</h1>

<%= form_with model: @company do |f| %>
    <div>
        <%= f.label :name %>
        <%= f.text_field :name %>
    </div>

    <div>
        <%= f.label :description %>
        <%= f.text_area :description %>
    </div>

    <div>
        <%= f.label :start_date, 'Start Date' %>
        <%= f.date_field :start_date %>
    </div>

    <div>
        <%= f.label :country %>
        <%= f.text_field :country %>
    </div>

    <div>
        <button type="button">
            <%= link_to 'Cancel', root_path %>
        </button>
        <%= f.submit 'Create Company' %>
    </div>
<% end %>