<h1>Add Company to <%= @game.name %></h1>

<%= form_with model: [@game, @involved_company] do |f| %>
    <div>
        <%= f.label :company_id, 'Company' %>
        <%= f.collection_select :company_id, Company.all, :id, :name, prompt: 'Please select' %>
    </div>

    <div>
    </div>

    <div>
      <button type='button'>
        <%= link_to 'Cancel', @game %>
      </button>
      <%= f.submit 'Add Company' %>
    </div>
<% end %>